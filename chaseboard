<!DOCTYPE html>
<html>
<head>
<style>
table, td, th {
    border: 1px solid black;
}
td {width:20px;
height: 20px;

}
</style>
</head>
<body>
<table>
<script>
var cx ='red';
for (var row=1; row<9; row++){
document.write("<tr>");
for (var col=1; col<9; col++){

      if (row % 2 == 0 && col % 2 == 0 ) {
document.write("<td style='background:black'>");
}else if (row % 2 == 0 && col % 2 != 0) {
document.write("<td style='background:white'>");
}else if (row % 2 != 0 && col % 2 == 0) {
document.write("<td style='background:white'>");
}else if (row % 2 != 0 && col % 2 != 0) {
document.write("<td style='background:black'>");
}

document.write("</td>");
}
document.write("<tr>");
}
</script>

</table>
</body>

</html>
